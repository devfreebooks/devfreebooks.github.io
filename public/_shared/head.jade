- var page_title = subtitle ? subtitle + " | " + title : title
- var page_url = root_url[environment] + (name == undefined ? '' : name)
meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
meta(charset="utf-8")
title #{page_title}
meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no")
meta(name="apple-mobile-web-app-capable" content="yes")
meta(name="apple-mobile-web-app-status-bar-style" content="#333333")
meta(name="apple-mobile-web-app-title" content="#{title}")
meta(name="mobile-web-app-capable" content="yes")
meta(name="application-name" content="#{title}")
meta(name="theme-color" content="#333333")
meta(name="msapplication-TileImage" content="#{root_url[environment]}assets/images/#{slug_title}-128.png")
meta(name="msapplication-TileColor" content="#333333")
meta(name="msapplication-tap-highlight" content="no")
meta(name="author" content="#{title}")
meta(name="description" content="#{description}")
meta(property="og:title" content="#{page_title}")
meta(property="og:description" content="#{description}")
meta(property="og:url" content="#{root_url[environment]}")
meta(property="og:site_name" content="#{title}")
meta(property="og:image" content="#{root_url[environment]}assets/images/#{slug_title}-thumb.png")
meta(property="og:type" content="website")
meta(property="article:author" content="https://plus.google.com/+CaioRibeiroPereira")
meta(property="article:section" content="main")
meta(name="google-site-verification" content="57vcywZyI5D313Nwa4fNZJKGhqXTW8wwnl9xfcx58zw")
link(rel="manifest" href="#{root_url[environment]}manifest.json")
link(rel="stylesheet" href="#{root_url[environment]}assets/css/application.css" type="text/css")
link(rel="icon" href="#{root_url[environment]}assets/images/#{slug_title}-128.png" sizes="128x128")
link(rel="shortcut icon" href="#{root_url[environment]}favicon.ico" type="image/x-icon")
link(rel="canonical" href="#{page_url}")
